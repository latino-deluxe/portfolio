<div class="outer @OuterClass">
    <div class="inner @InnerClass">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string OuterClass { get; set; }
    [Parameter]
    public string InnerClass { get; set; }
}
